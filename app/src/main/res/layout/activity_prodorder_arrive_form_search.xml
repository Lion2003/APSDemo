<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hyphenate="http://schemas.android.com/apk/res-auto"
    xmlns:myitem="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hyphenate:titleBarTitle="库存报表"
        hyphenate:titleBarLeftImage="@drawable/ease_mm_title_back"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ddd"
        android:layout_marginTop="20dp"/>
    <com.yiaosi.aps.widget.EditItem
        android:id="@+id/apafs_beginDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        myitem:title="开始日期："
        myitem:arrmode="visible"
        myitem:valueColor="@color/gray_888888"/>
    <com.yiaosi.aps.widget.EditItem
        android:id="@+id/apafs_endDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        myitem:title="结束日期："
        myitem:arrmode="visible"
        myitem:valueColor="@color/gray_888888"
        myitem:linemode="none"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ddd"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ddd"
        android:layout_marginTop="20dp"/>
    <com.yiaosi.aps.widget.EditItem
        android:id="@+id/apafs_produceNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        myitem:inputMode="edit"
        myitem:title="@string/input_product_order"
        myitem:arrmode="visible"
        myitem:valueColor="@color/gray_888888"/>
    <com.yiaosi.aps.widget.EditItem
        android:id="@+id/apafs_styleNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        myitem:inputMode="edit"
        myitem:title="@string/input_style_num"
        myitem:arrmode="visible"
        myitem:valueColor="@color/gray_888888"/>
    <com.yiaosi.aps.widget.EditItem
        android:id="@+id/apafs_dakuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        myitem:inputMode="edit"
        myitem:title="@string/input_dakuan"
        myitem:arrmode="visible"
        myitem:valueColor="@color/gray_888888"
        myitem:linemode="none"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ddd"/>
    <Button
        android:id="@+id/btn_search"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="12dp"
        android:background="@drawable/em_btn_style_alert_dialog_special"
        android:text="@string/search"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</LinearLayout>