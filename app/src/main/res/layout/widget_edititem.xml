<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_white_nornal_gray_press" >
    <LinearLayout
        android:id="@+id/we_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/mp_45"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:maxWidth="@dimen/mp_200"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/mp_12"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:text="title"
            android:textSize="@dimen/f_17" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:layout_toRightOf="@+id/tvTitle"
            android:layout_toLeftOf="@+id/img_arrow"
            android:layout_marginLeft="@dimen/mp_8"
            >
            <TextView
                android:id="@+id/tvValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mp_10"
                android:layout_alignParentRight="true"
                android:gravity="right|center_vertical"
                android:text=""
                android:textSize="@dimen/f_17" />
            <!--
            <TextView
                android:id="@+id/tvValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/mp_10"
                android:layout_alignParentRight="true"
                android:gravity="right|center_vertical"
                android:text="title"
                android:textSize="@dimen/f_17"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"  />-->
            <com.yiaosi.aps.widget.EditTextWithClear
                android:id="@+id/editValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mp_10"
                android:layout_marginRight="@dimen/mp_10"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/f_17"
                android:visibility="gone"
                android:background="@color/white" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/mp_5"
            android:src="@drawable/dl_android"
            android:visibility="visible"/>
    </LinearLayout>
    <View
        android:id="@+id/we_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ddd"
        android:layout_below="@+id/we_linearLayout"
        android:layout_marginLeft="@dimen/mp_10"/>
</RelativeLayout>