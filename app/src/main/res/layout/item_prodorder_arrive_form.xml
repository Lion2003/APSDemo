<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/mp_4"
    card_view:cardElevation="@dimen/mp_4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/select_white_nornal_gray_press">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/mp_15">
            <TextView
                android:id="@+id/ipaf_produceOrderNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生产单号："
                android:textSize="@dimen/f_18"/>
            <LinearLayout
                android:id="@+id/ipaf_linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ipaf_produceOrderNum"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/ipaf_deliveryDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/mp_5"
                    android:text="交货期："
                    android:textSize="@dimen/f_15"/>
                <TextView
                    android:id="@+id/ipaf_styleNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ipaf_deliveryDate"
                    android:layout_marginTop="@dimen/mp_5"
                    android:text="款号："
                    android:textSize="@dimen/f_15"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ipaf_linearLayout"
                android:layout_toLeftOf="@+id/ipaf_arrow"
                android:layout_alignTop="@+id/ipaf_linearLayout"
                android:layout_marginLeft="30dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/ipaf_dakuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/mp_5"
                    android:text="大款："
                    android:textSize="@dimen/f_15"/>
                <TextView
                    android:id="@+id/ipaf_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/mp_5"
                    android:text="数量："
                    android:textSize="@dimen/f_15"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/ipaf_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dl_android"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>