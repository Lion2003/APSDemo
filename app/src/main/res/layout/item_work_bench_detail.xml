<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/mp_15">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生产单号"
                style="@style/text_13sp_color_666666"
                android:layout_marginTop="0dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户交期"
                style="@style/text_13sp_color_666666"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品分类"
                style="@style/text_13sp_color_666666"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量"
                style="@style/text_13sp_color_666666"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原始交期"
                style="@style/text_13sp_color_666666"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主料到货期"
                style="@style/text_13sp_color_666666"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最早可开工"
                style="@style/text_13sp_color_666666"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1317403"
                style="@style/text_13sp_color_666666"
                android:layout_marginTop="0dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-08-06"
                style="@style/text_13sp_color_666666"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女式长裤"
                style="@style/text_13sp_color_666666"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5700件"
                style="@style/text_13sp_color_666666"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-07-20"
                style="@style/text_13sp_color_666666"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-06-15"
                style="@style/text_13sp_color_666666"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-06-28"
                style="@style/text_13sp_color_666666"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户名称"
                style="@style/text_13sp_color_666666"
                android:layout_marginTop="0dp"
                android:paddingLeft="@dimen/mp_10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="款号"
                style="@style/text_13sp_color_666666"
                android:paddingLeft="@dimen/mp_10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="颜色"
                style="@style/text_13sp_color_666666"
                android:paddingLeft="@dimen/mp_10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/text_13sp_color_666666"
                android:paddingLeft="@dimen/mp_10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交货期"
                style="@style/text_13sp_color_666666"
                android:paddingLeft="@dimen/mp_10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标准工时"
                style="@style/text_13sp_color_666666"
                android:paddingLeft="@dimen/mp_10"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ewi_productOrderNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="路易雪莱"
                style="@style/text_13sp_color_666666"
                android:layout_marginTop="0dp"/>
            <TextView
                android:id="@+id/ewi_clientDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="百灵D2长裤"
                style="@style/text_13sp_color_666666"/>
            <TextView
                android:id="@+id/ewi_styleNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="蓝色"
                style="@style/text_13sp_color_666666"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/text_13sp_color_666666"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-07-19"
                style="@style/text_13sp_color_666666"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="33"
                style="@style/text_13sp_color_666666"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/ewi_jindu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="进度"
            android:drawableLeft="@drawable/icon_progress"
            style="@style/text_13sp_color_4d4d4d"
            android:gravity="center"
            android:drawablePadding="@dimen/mp_5"
            android:layout_marginLeft="@dimen/mp_12"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_progress_bar"
            android:layout_toRightOf="@+id/ewi_jindu"
            android:layout_toLeftOf="@+id/ewi_yanwu"
            android:layout_marginLeft="@dimen/mp_10"
            android:layout_marginRight="@dimen/mp_10"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/ewi_yanwu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产前板延误"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/mp_10"
            android:layout_centerVertical="true"
            android:textColor="@color/color_e24a4a"
            android:textSize="@dimen/f_12"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处理结果      未处理"
            android:textSize="@dimen/f_13"
            android:textColor="@color/color_e24a4a"
            android:padding="@dimen/mp_10"
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/eal_btnLogin"
            android:layout_width="@dimen/mp_90"
            android:layout_height="@dimen/mp_33"
            android:layout_margin="@dimen/mp_10"
            android:layout_alignParentRight="true"
            android:background="@drawable/em_button_login_bg"
            android:gravity="center"
            android:text="我已处理"
            android:textColor="@android:color/white"
            android:textSize="@dimen/f_16" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"/>
</LinearLayout>